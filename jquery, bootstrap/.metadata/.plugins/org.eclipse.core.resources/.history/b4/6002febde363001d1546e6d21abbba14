    	integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" 
    	crossorigin="anonymous"></script>
	<script>
		$(function(){
		//$('h1').filter().css()
		$('h1').filter(':even').css({color:'red', background:'black'});
		$('h1').filter(':odd').css({color:'red', background:'green'});
		$('h1').filter(':index:3n').css({color:'white', background:'mediumseagreen'});
		});
		//실습1. 홀수 폰트색상 red, 배경 green
		//실습2. 3개씩 건너서 폰트색상 white, 배경 mediumseagreen 인덱스 전달받아서 나머지 연산
	</script>
